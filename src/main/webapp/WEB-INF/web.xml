<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Employee Management System</display-name>

  <!-- Register Servlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.employee.utils.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.employee.utils.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Display Servlet -->
  <servlet>
    <servlet-name>DisplayServlet</servlet-name>
    <servlet-class>com.employee.utils.DisplayServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayServlet</servlet-name>
    <url-pattern>/display</url-pattern>
  </servlet-mapping>
  <!-- Delete Employee Servlet -->
  <servlet>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <servlet-class>com.employee.utils.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateAgeServlet</servlet-name>
    <servlet-class>com.employee.utils.UpdateAgeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateAgeServlet</servlet-name>
    <url-pattern>/updateAge</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateSalaryServlet</servlet-name>
    <servlet-class>com.employee.utils.UpdateSalaryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateSalaryServlet</servlet-name>
    <url-pattern>/updateSalary</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateEmailServlet</servlet-name>
    <servlet-class>com.employee.utils.UpdateEmailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateEmailServlet</servlet-name>
    <url-pattern>/updateEmail</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdatePasswordServlet</servlet-name>
    <servlet-class>com.employee.utils.UpdatePasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdatePasswordServlet</servlet-name>
    <url-pattern>/updatePassword</url-pattern>
  </servlet-mapping>




</web-app>
